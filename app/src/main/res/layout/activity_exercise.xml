<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Square Inputs -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="64dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Square:" />

            <EditText
                android:id="@+id/sideEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Side Length" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calculateSquareButton"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_background"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Calculate Square Area and Perimeter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/squareResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Rectangle Inputs -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="64dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Rectangle:" />

            <EditText
                android:id="@+id/widthEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Width" />

            <EditText
                android:id="@+id/rectHeightEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Height" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calculateRectangleButton"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_background"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Calculate Rectangle Area and Perimeter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/rectangleResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Triangle Inputs -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="64dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Triangle:" />

            <EditText
                android:id="@+id/side1EditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Side 1" />

            <EditText
                android:id="@+id/side2EditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Side 2" />

            <EditText
                android:id="@+id/side3EditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Side 3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calculateTriangleButton"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_background"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Calculate Triangle Area and Perimeter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/triangleResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textStyle="bold"  />

            <!-- Circle Inputs -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="64dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="Circle:"/>

            <EditText
                android:id="@+id/radiusEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background"
                android:textAlignment="center"
                android:hint="Radius" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calculateCircleButton"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_background"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Calculate Circle Area and Perimeter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/circleResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:textSize="14sp"
                android:textStyle="bold"  />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>